<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/text_margin"
    tools:context="chat.delta.androidyggmail.settings.SettingsFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_enable_onboot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_on_boot"
            android:layout_marginTop="@dimen/text_margin"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_local_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/local_network"
            android:layout_marginTop="@dimen/text_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_local_network"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="@string/description_local_network"
            android:textColor="@color/color_hint"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="-10dp"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_public_peers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/public_peers"
            android:layout_marginTop="@dimen/text_margin"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_public_peers"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="@string/description_public_peers"
            android:textColor="@color/color_hint"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="-10dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_peers"
            android:paddingTop="@dimen/text_margin"
            android:paddingBottom="@dimen/text_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_n_peers"
            android:enabled="true"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_custom_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_client"
            android:layout_marginTop="@dimen/text_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_custom_client"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="@string/description_custom_client"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="-10dp"
            android:textColor="@color/color_hint"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/server_detail_container"
            android:orientation="vertical"
            android:visibility="visible"
            >
            <chat.delta.androidyggmail.settings.CopySettingsEntry
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                app:text="@string/user_name"
                app:value=""
                app:showCopy="true"
                android:visibility="visible"
                />
            <chat.delta.androidyggmail.settings.CopySettingsEntry
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                app:text="@string/password"
                app:value="delta"
                app:showCopy="true"
                android:visibility="visible"
                />
            <chat.delta.androidyggmail.settings.CopySettingsEntry
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imap_server"
                app:text="@string/imap_server"
                app:value="localhost"
                app:showCopy="true"
                android:visibility="visible"
                />
            <chat.delta.androidyggmail.settings.CopySettingsEntry
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imap_port"
                app:text="@string/imap_port"
                app:value="1143"
                app:showCopy="true"
                android:visibility="visible"
                />
            <chat.delta.androidyggmail.settings.CopySettingsEntry
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imap_security"
                app:text="@string/imap_security"
                app:value="OFF"
                app:showCopy="false"
                android:visibility="visible"
                />
            <chat.delta.androidyggmail.settings.CopySettingsEntry
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/smtp_server"
                app:text="@string/smtp_server"
                app:value="localhost"
                app:showCopy="true"
                android:visibility="visible"
                />
            <chat.delta.androidyggmail.settings.CopySettingsEntry
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/smtp_port"
                app:text="@string/smtp_port"
                app:value="1025"
                app:showCopy="true"
                android:visibility="visible"
                />
            <chat.delta.androidyggmail.settings.CopySettingsEntry
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/smtp_security"
                app:text="@string/smtp_security"
                app:value="OFF"
                app:showCopy="false"
                android:visibility="visible"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>